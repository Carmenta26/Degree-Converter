<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="90dp"
        android:text="Convertidor de Grados"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <Button
        android:id="@+id/buttonCent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="째C"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonFar"
        app:layout_constraintEnd_toStartOf="@+id/buttonFar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="278dp"
        android:text="째F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCent"
        app:layout_constraintTop_toBottomOf="@+id/textFar" />

    <EditText
        android:id="@+id/textFar"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Grados 째F"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/buttonFar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCent" />

    <EditText
        android:id="@+id/textCent"
        android:layout_width="254dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Grados 째C"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textFar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>